<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>seam-parent</artifactId>
		<groupId>org.jboss.seam</groupId>
		<version>4-SNAPSHOT</version>
	</parent>

	<groupId>org.jboss.seam.mail</groupId>
	<artifactId>seam-mail-parent</artifactId>
	<packaging>pom</packaging>
	<version>3.0.0-SNAPSHOT</version>
	<name>Seam Mail Module Parent</name>

	<properties>
		<seam.version>3.0.0.b01</seam.version>
	</properties>

	<!-- <prerequisites> <maven>3.0</maven> </prerequisites> -->

	<modules>
		<module>api-base</module>
		<module>impl-base</module>
		<module>api-velocity</module>
		<module>impl-velocity</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jboss.seam</groupId>
				<artifactId>seam</artifactId>
				<version>${seam.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<!-- Override submodule versions from org.jboss.seam:seam -->
			<dependency>
				<groupId>org.jboss.seam.mail</groupId>
				<artifactId>seam-mail</artifactId>
				<version>${project.version}</version>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<!-- Dependencies common to the api and implementation(s) -->
	<dependencies>
		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4.3</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1.1</version>
			<scope>provided</scope>
		</dependency>		
	</dependencies>

	<profiles>
		<profile>
			<id>distribution</id>
			<activation>
				<property>
					<name>release</name>
				</property>
			</activation>
			<modules>
				<module>dist</module>
				<module>docs</module>
				<module>examples/sendmail</module>
			</modules>
		</profile>
	</profiles>

	<scm>
		<connection>scm:svn:http://anonsvn.jboss.org/repos/seam/modules/mail/trunk</connection>
		<developerConnection>scm:svn:https://svn.jboss.org/repos/seam/modules/mail/trunk</developerConnection>
		<url>http://fisheye.jboss.org/browse/Seam/modules/mail/trunk</url>
	</scm>

</project>
